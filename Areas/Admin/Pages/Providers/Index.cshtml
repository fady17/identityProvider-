@page
@model Orjnz.IdentityProvider.Web.Areas.Admin.Pages.Providers.IndexModel
@{
    ViewData["Title"] = "Manage Providers";
}

<link rel="stylesheet" href="~/css/providers-index.css" />

<!-- Simplified header -->
<div class="page-header">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-12 col-lg-8">
                <div class="header-content">
                    <div class="header-icon">
                        <i class="fas fa-building-columns"></i>
                    </div>
                    <div class="header-text">
                        <h1>@ViewData["Title"]</h1>
                        <p>Configure and monitor identity providers</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-4 mt-3 mt-lg-0">
                <div class="header-actions">
                    <button class="btn btn-outline" data-bs-toggle="modal" data-bs-target="#helpModal">
                        <i class="fas fa-question-circle"></i>
                        <span class="d-none d-sm-inline">Help</span>
                    </button>
                    <a href="/Admin/Providers/Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i>
                        <span>Add Provider</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="breadcrumb-nav">
    <div class="container-fluid">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index" asp-area="Admin">Admin Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </div>
</nav>

<!-- Stats cards -->
<div class="container-fluid">
    <div class="stats-grid">
        <div class="stat-card stat-total">
            <div class="stat-icon">
                <i class="fas fa-database"></i>
            </div>
            <div class="stat-content">
                <h3>@Model.Providers.Count()</h3>
                <p>Total Providers</p>
            </div>
        </div>
        <div class="stat-card stat-active">
            <div class="stat-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="stat-content">
                <h3>@Model.Providers.Count(p => p.IsActive)</h3>
                <p>Active Providers</p>
            </div>
        </div>
        <div class="stat-card stat-inactive">
            <div class="stat-icon">
                <i class="fas fa-pause-circle"></i>
            </div>
            <div class="stat-content">
                <h3>@Model.Providers.Count(p => !p.IsActive)</h3>
                <p>Inactive Providers</p>
            </div>
        </div>
        <div class="stat-card stat-rate">
            <div class="stat-icon">
                <i class="fas fa-percentage"></i>
            </div>
            <div class="stat-content">
                <h3>@(Model.Providers.Any() ? Math.Round((double)Model.Providers.Count(p => p.IsActive) / Model.Providers.Count() * 100, 1) : 0)%</h3>
                <p>Success Rate</p>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <div class="alert-content">
                <i class="fas fa-check-circle"></i>
                <div>
                    <strong>Success!</strong>
                    <span>@TempData["SuccessMessage"]</span>
                </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Providers table -->
    <div class="providers-card">
        <div class="card-header">
            <div class="card-title">
                <i class="fas fa-list-ul"></i>
                <span>Identity Providers</span>
            </div>
            <div class="view-toggle">
                <button class="btn btn-sm" onclick="toggleView('grid')">
                    <i class="fas fa-th"></i>
                </button>
                <button class="btn btn-sm active" onclick="toggleView('table')">
                    <i class="fas fa-list"></i>
                </button>
            </div>
        </div>
        
        <div class="card-body">
            @if (Model.Providers.Any())
            {
                <div class="table-container">
                    <table class="providers-table">
                        <thead>
                            <tr>
                                <th>
                                    <i class="fas fa-tag"></i>
                                    <span class="d-none d-sm-inline">Provider</span>
                                </th>
                                <th class="d-none d-md-table-cell">
                                    <i class="fas fa-code"></i>
                                    <span>Code</span>
                                </th>
                                <th class="d-none d-lg-table-cell">
                                    <i class="fas fa-globe"></i>
                                    <span>Domain</span>
                                </th>
                                <th>
                                    <i class="fas fa-toggle-on"></i>
                                    <span class="d-none d-sm-inline">Status</span>
                                </th>
                                <th class="text-end">
                                    <i class="fas fa-cogs"></i>
                                    <span class="d-none d-sm-inline">Actions</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Providers.OrderBy(p => p.Name))
                            {
                                <tr>
                                    <td>
                                        <div class="provider-info">
                                            <div class="status-indicator @(item.IsActive ? "active" : "inactive")"></div>
                                            <div class="provider-details">
                                                <div class="provider-name">@Html.DisplayFor(modelItem => item.Name)</div>
                                                <div class="provider-type d-sm-none">
                                                    <span class="code-badge">@Html.DisplayFor(modelItem => item.ShortCode)</span>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="d-none d-md-table-cell">
                                        <span class="code-badge">@Html.DisplayFor(modelItem => item.ShortCode)</span>
                                    </td>
                                    <td class="d-none d-lg-table-cell">
                                        @if (!string.IsNullOrEmpty(item.WebsiteDomain))
                                        {
                                            <a href="https://@item.WebsiteDomain" target="_blank" class="domain-link">
                                                <span>@Html.DisplayFor(modelItem => item.WebsiteDomain)</span>
                                                <i class="fas fa-external-link-alt"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not specified</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="status-badge active">
                                                <i class="fas fa-check-circle"></i>
                                                <span class="d-none d-sm-inline">Active</span>
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="status-badge inactive">
                                                <i class="fas fa-pause-circle"></i>
                                                <span class="d-none d-sm-inline">Inactive</span>
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <a href="/Admin/Providers/Edit/@item.Id" class="btn btn-edit">
                                                <i class="fas fa-edit"></i>
                                                <span>Edit</span>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-building-columns"></i>
                    <h4>No Identity Providers Found</h4>
                    <p>Get started by creating your first identity provider to enable authentication.</p>
                    <a href="/Admin/Providers/Create" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus"></i>
                        <span>Create Your First Provider</span>
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Help Modal -->
<div class="modal fade" id="helpModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-question-circle"></i>
                    Identity Provider Management Help
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6><i class="fas fa-info-circle"></i>Understanding Status</h6>
                        <ul class="help-list">
                            <li>
                                <span class="status-indicator active"></span>
                                <strong>Active:</strong> Provider can authenticate users
                            </li>
                            <li>
                                <span class="status-indicator inactive"></span>
                                <strong>Inactive:</strong> Provider is disabled
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6><i class="fas fa-cogs"></i>Available Actions</h6>
                        <ul class="help-list">
                            <li><i class="fas fa-edit text-dark"></i><strong>Edit:</strong> Modify provider settings</li>
                        </ul>
                    </div>
                </div>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Important:</strong> Inactive providers cannot authenticate users.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
function toggleView(viewType) {
    const buttons = document.querySelectorAll('[onclick^="toggleView"]');
    buttons.forEach(btn => btn.classList.remove('active'));
    event.target.closest('button').classList.add('active');
}
</script>
